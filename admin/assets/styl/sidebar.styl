.sidebar
	border-right 1px solid line-color
	background lighten(line-color, 50%)
	padding 0.5em
	
	h1
		margin 0
		
		a
			color inherit
			text-decoration none
			
	nav a
		text-decoration none
		color inherit
		display block
		margin 0.2em 0
			
		&:hover
			background #ddd
			
		&.current
			background dodgerblue
			color #fff
			-webkit-font-smoothing antialiased
	
	ul
		padding 0
		list-style none
		
	li a
		padding 0.5em
		margin-left -0.5em
		padding-left 1em
		border-radius 0 rad rad 0
		
		i.fa
			margin-right 1em